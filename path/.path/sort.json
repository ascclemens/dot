{
  "rules": {
    "order": {
      "paths": [
        {"contains": ".local"},
        {"contains": ".cargo"},
        {"contains": ".rvm"},
        {"contains": ".pyenv"},
        {"default": true},
        {"exact": "/usr/local/bin"},
        {"exact": "/usr/local/sbin"},
        {"exact": "/bin"},
        {"exact": "/sbin"}
      ],
      "sort": {
        "alphabetical": 1,
        "path_component_length": -1
      }
    },
    "must_exist": false,
    "must_be_unique": true,
    "must_be_absolute": false
  }
}
